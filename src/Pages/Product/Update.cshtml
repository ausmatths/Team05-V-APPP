@page "{id}"
@using ContosoCrafts.WebSite.Services
@using ContosoCrafts.WebSite.Models
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.UpdateModel

@{
    ViewData["Title"] = "Update page";
}

<html>
<head>
    <title>Update Page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <link rel="stylesheet" type="text/css" href="~/css/Update.css">
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <div class="container">
                <div class="contact-parent">
                    <div class="contact-child child3">
                        <div class="inside-contact">
                            <h2>Update</h2>
                            <h3>
                                <Label class="form-control-file" runat="server" Text=""></Label>
                            </h3>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Title" class="control-label"></label>
                                <input asp-for="@Model.Product.Title" class="form-control" id="@Model.Product.Title" />
                                <span asp-validation-for="@Model.Product.Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Description" class="control-label"></label>
                                <input asp-for="@Model.Product.Description" class="form-control" id="@Model.Product.Description" />
                                <span asp-validation-for="@Model.Product.Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Quantity" class="control-label"></label>
                                <input asp-for="@Model.Product.Quantity" class="form-control" id="@Model.Product.Quantity" />
                                <span asp-validation-for="@Model.Product.Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Price" class="control-label"></label>
                                <input asp-for="@Model.Product.Price" class="form-control" id="@Model.Product.Price" />
                                <span asp-validation-for="@Model.Product.Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Url" class="control-label"></label>
                                <input asp-for="@Model.Product.Url" class="form-control" id="@Model.Product.Url" />
                                <span asp-validation-for="@Model.Product.Url" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="@Model.Product.Image" class="control-label"></label>
                                <input asp-for="@Model.Product.Image" class="form-control" id="@Model.Product.Image" />
                                <span asp-validation-for="@Model.Product.Image" class="text-danger"></span>
                            </div>


                            <div class="form_action--button">
                                <input type="submit" value="Submit" />
                                <input type="reset" value="Reset" />
                            </div>
                        </div>
                    </div>

                    <div class="contact-child child4">
                        <div class="section">
                            <div class="container">
                                <div class="contant-section">
                                    <div class="image-section">
                                        <img src="@Model.Product.Image" alt="Image for @Model.Product.Title">
                                    </div>
                                    <div class="title">
                                        <h1>@Model.Product.Title</h1>
                                    </div>
                                    <div class="contant">
                                        <h3>@Model.Product.Id</h3>
                                        <p>@Model.Product.Description</p>
                                        <p>@Model.Product.Quantity</p>
                                        <p>@Model.Product.Price</p>
                                    </div>
                                    <div class="social">
                                        <i class="fa fa-share-square"></i> Share Us on Social Media: <br />
                                        <span>
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="https://www.facebook.com/login/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/facebook-icons/social-facebook-icon-small-flat-iconset-1.png"></a>&nbsp;
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="https://twitter.com/login" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/twitter-logo-png/twitter-logo-vector-png-clipart-1.png"></a>&nbsp;
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="https://www.instagram.com/accounts/login/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/instagram-icon-png/instagram-android-app-icon-2.png"></a>&nbsp;
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="https://www.youtube.com/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/youtube-logo-blue-pictures-png-28.png"></a>&nbsp;
                                            &nbsp;&nbsp;&nbsp;&nbsp;<a href="https://www.whatsapp.com/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/whatsapp-logo-transparent-png-21.png"></a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }