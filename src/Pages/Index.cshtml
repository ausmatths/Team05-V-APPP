@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="container">
    <div class="top-buffer"></div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card bg-transparent">
                <div class="card-body">
                    <h5 class="text-center font-italic">Reserving for personal use?</h5>
                    <a class="nav-link text-center dark-green-text" asp-area="" asp-page="/ProductDisplay">
                        <h4 class="text-center font-italic">Personal Renting</h4>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card bg-transparent">
                <div class="card-body">
                    <h5 class="text-center font-italic">Reserving for business use?</h5>
                    <a class="nav-link text-center dark-green-text" asp-area="" asp-page="/ProductDisplay">
                        <h4 class="text-center font-italic">Enterprise Renting</h4>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="top-buffer"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active text-center">
            <img class="img-fluid rounded shadow" src="https://images.pexels.com/photos/919073/pexels-photo-919073.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="First slide">
            <div class="carousel-caption">
                <h1>First time user?</h1>
                <h4>Get 25% off!</h4>
            </div>
        </div>
        <div class="carousel-item text-center">
            <img class="img-fluid rounded shadow-lg" src="https://images.unsplash.com/photo-1532581140115-3e355d1ed1de?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="Second slide">
            <div class="carousel-caption">
                <h1>Huge Savings alert!</h1>
                <h4>New offers Every Thursday!</h4>
            </div>
        </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




