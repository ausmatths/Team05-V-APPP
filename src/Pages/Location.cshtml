@page
@model ContosoCrafts.WebSite.Pages.LocationModel
@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"">
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-161434692-26"></script>
    <link href="locationform.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <div class="top-buffer"></div>
        <h6 class="font-italic">Rent from any location below!</h6>
        <div class="row">
            <div class="col-sm-3">
                <div class="card">
                    <h6 class="font-italic">Location: California</h6>
                    <h6 class="font-italic">Address: 788 Reuben Mews</h6>
                    <h6 class="font-italic">Zipcode: 98194</h6>
                    <h6 class="font-italic">Phone: 7162640595</h6>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <h6 class="font-italic">Location: Seattle</h6>
                    <h6 class="font-italic">Address: 11629 Audie Islands</h6>
                    <h6 class="font-italic">Zipcode: 98104</h6>
                    <h6 class="font-italic">Phone: 5729357228</h6>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="card">
                    <h6 class="font-italic">Location: New Jersey</h6>
                    <h6 class="font-italic">Address: 0226 Alysson Bridge</h6>
                    <h6 class="font-italic">Zipcode: 95197</h6>
                    <h6 class="font-italic">Phone: 5392721871</h6>
                </div>
            </div>
        </div>
    </div>
    <div class="top-buffer"></div>
    <div class="wrapper">
        <form method="POST">
            <div class="input-group">
                <div class="input-box">
                    <i class="fa fa-map-marker icon"></i>
                    <input type="text" placeholder="Destination" required class="name">
                </div>
            </div>
            <div class="button">
                <i class="fa fa-search icon"></i>
                <button type="submit"> Search </button>
            </div>
        </form>
    </div>
</body>
<div class="map-responsive">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d386950.6511603643!2d-73.70231446529533!3d40.738882125234106!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNueva+York!5e0!3m2!1ses-419!2sus!4v1445032011908" width="300" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
</div>
</html>