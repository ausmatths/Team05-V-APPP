@page
@model ContosoCrafts.WebSite.Pages.ContactUsModel
@{
    ViewData["Title"] = "Customer Support";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>Contact Us</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link href="~/css/ContactUs.css" rel="stylesheet" />
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <div class="container">
                <div class="contact-parent">
                    <div class="contact-child child1">
                        <p>
                            <i class="fas fa-map-marker-alt"></i> Address: <br />
                            <span>
                                901 12th Ave,
                                <br />
                                Seattle, WA 98122.
                            </span>
                        </p>

                        <p>
                            <i class="fas fa-phone-alt"></i> Let's Talk !<br />
                            <span> +1-000-000-0000</span>
                        </p>

                        <p>
                            <i class=" far fa-envelope"></i> General Support <br />
                            <span> contactus@seattle.edu</span>
                        </p>

                        <p>
                            <i class="fa fa-share-square"></i> Share Us on Social Media: <br />
                            <span style="font-size: 10.5pt;">
                                <a href="https://www.facebook.com/login/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/facebook-icons/social-facebook-icon-small-flat-iconset-1.png"></a>&nbsp;
                                <a href="https://twitter.com/login" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/twitter-logo-png/twitter-logo-vector-png-clipart-1.png"></a>&nbsp;
                                <a href="https://www.instagram.com/accounts/login/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/instagram-icon-png/instagram-android-app-icon-2.png"></a>&nbsp;
                                <a href="https://www.youtube.com/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/youtube-logo-blue-pictures-png-28.png"></a>&nbsp;
                                <a href="https://www.whatsapp.com/" target="_blank"><img height="25" width="25" alt="User-added image" src="https://www.freepnglogos.com/uploads/whatsapp-logo-transparent-png-21.png"></a>
                            </span>
                        </p>
                    </div>

                    <div class="contact-child child2">
                        <div class="inside-contact">
                            <h2>Contact Us</h2>
                            <h3>
                                <Label class="form-control-file" runat="server" Text=""></Label>
                            </h3>

                            <p>Name *</p>
                            <input type="txt_name" runat="server" Required="required" placeholder="full name:"></input>

                            <p>Email *</p>
                            <input type="txt_email" runat="server" Required="required" placeholder="email address:"></input>

                            <p>Phone *</p>
                            <input type="txt_phone" runat="server" Required="required" placeholder="contact info:"></input>

                            <p>Subject *</p>
                            <input type="txt_subject" runat="server" Required="required" placeholder="short description:"></input>

                            <p>Message *</p>
                            <input type="txt_message" runat="server" Required="required" TextMode="MultiLine" Rows="10" placeholder="detailed description:"></input>

                            <button type="btn_send" runat="server" Text="SEND" class="btn btn-primary form-control">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>